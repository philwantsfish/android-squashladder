<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fish.philwants.glwaterloosquash.StandingsActivity$DisplayStandings">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxHeight="10dp"
        android:padding="10dp"
        android:paddingLeft="16dp"
        android:background="@color/standingHeader"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/heading_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="Group A"/>

        <TextView
            android:id="@+id/heading_games_played"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
            android:textStyle="bold"
            android:text="GP"/>

        <TextView
            android:id="@+id/heading_wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
            android:textStyle="bold"
            android:text="W"/>

        <TextView
            android:id="@+id/heading_losses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
            android:textStyle="bold"
            android:text="L"/>

        <TextView
            android:id="@+id/heading_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
            android:paddingRight="8dp"
            android:textStyle="bold"
            android:text="Pts"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxHeight="10dp"
        android:padding="10dp"
        android:paddingLeft="16dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listview_standings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>
